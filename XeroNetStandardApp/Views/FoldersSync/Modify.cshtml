@model dynamic

<h2>Rename Folder</h2>

<form method="POST" action="/FoldersSync/Rename">
    <select id="folderId" name="folderId">
    <option value=@ViewBag.folderId>@ViewBag.folderId</option>
    </select>   
    <br> 
    <label for="NewName">New Folder Name:</label>
    <br>
    <input  class="form-control" type="text" id="NewName" placeholder="Enter a new folder name" name="NewName" value=@ViewBag.folderName required />    
    <br>
    <input class="btn btn-primary form-control" type="submit" />
</form>

<br>
<p>
  <button class="btn btn-link" onclick="location.href='@Url.Action("Index", "FoldersSync")'">Back</button>
</p>
