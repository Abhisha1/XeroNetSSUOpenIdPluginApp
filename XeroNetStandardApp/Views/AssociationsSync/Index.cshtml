@model dynamic

<h2>Select File</h2>
</br>
<table class="table table-responsive fixed-table-body">
  <tr>
    <th>File Name</th>
    <th>File Id</th>
    <th>Load</th>
  </tr>
  @foreach (var file in Model)
  {
      <tr>
        <td>@file.Name</td>
        <td>@file.Id.ToString()</td>
        <td>
          <button class= "btn btn-primary" onclick="location.href='@Url.Action("LoadAssociations", "AssociationsSync", new { fileId = @file.Id })'">Load Associations</button>
        </td>
    </tr>
  }
</table>

<br>
<p><b>Raw JSON Response:</b></p>
<textarea class="form-control" readonly style="height: 350px">
@ViewBag.jsonResponse;
</textarea>
<br>
